<script type="text/javascript">
  function saveCurrency() {
    var documenturl = document.URL;
    if (documenturl == '')
    {
      documenturl = std_url;
    }
      refurl = documenturl;
    var theForm=document.getElementById("currency_form");
    theForm.action = refurl;
    theForm.submit();
   }
</script>
</div> <script type="text/javascript">

  
  function currencyInit_w(link_id) {
  
    var std_url = 'https://www.wine-searcher.com/';
    var path_info = 'find.lml';
    var documenturl = document.URL;
    if (path_info == '/change-currency.lml'){
      documenturl = '';
    }
    if (documenturl == ''){documenturl = std_url;}
    
    
    if (document.getElementById(link_id) != null){
      document.getElementById(link_id).href = std_url+'change-currency.lml?url_F='+escape(documenturl);
    }
    
  }
  
  
  currencyInit_w('change_currency_link_w');
  

</script>
